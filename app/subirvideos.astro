        .glass-container {
          background: rgba(255, 255, 255, 0.05);
          border-radius: 16px;
          padding: 2.5rem 5rem;
          max-width: 1200px;
          width: 100%;
          min-width: 600px;
          box-sizing: border-box;
          text-align: left;
          box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
